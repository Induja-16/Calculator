<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/number_1_text"
        android:text="Number 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/number_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_1_text"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="72dp"
        android:text="Number 2"

        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/edit_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/number_1_text"
        android:layout_marginTop="40dp">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_linear"
        android:layout_marginTop="235dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="+" />


        <Button
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="-"

            />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="*">

        </Button>

        <Button
            android:id="@+id/button_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
    android:id="@+id/answer_linear"
    android:layout_below="@+id/button_lin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/dispanswer_text"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>


</LinearLayout>

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_marginBottom="244dp"
        android:text="        Answer"
        android:textSize="30dp"></TextView>

    <EditText
        android:id="@+id/number_2_edit"
        android:layout_width="227dp"
        android:layout_height="63dp"
        android:layout_above="@+id/button_lin"
        android:layout_alignRight="@+id/number_2"
        android:layout_marginRight="-269dp"
        android:layout_marginBottom="249dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="108dp"
        android:layout_height="29dp"
        android:layout_above="@+id/answer_linear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="266dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="102dp"
        android:layout_height="30dp"
        android:layout_above="@+id/answer_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="236dp"
        android:text="TextView" />

</RelativeLayout>